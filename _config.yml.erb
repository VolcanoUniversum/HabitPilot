# Feature List                            Edit, add or remove features to be presented.
features                                  :
<% app['features'].each do |feature| %>
  - title                                 : <%= feature['title']['default'] %>
    description                           : <%= feature['description']['default'] %>
    fontawesome_icon_name                 : <%= feature['icon'] %>
<% end %>

